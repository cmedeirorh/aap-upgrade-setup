# This is the AAP enterprise installer inventory file
# Please consult the docs if you are unsure what to add
# For all optional variables please consult the Red Hat documentation:
# https://docs.redhat.com/en/documentation/red_hat_ansible_automation_platform/2.6/html/rpm_installation

# This section is for your AAP Gateway host(s)
# -----------------------------------------------------
[automationgateway]
{% for host in groups['gateways'] %}
{{ host }} ansible_host={{ hostvars[host].private_dns_name }}
{% endfor %}

# This section is for your AAP Controller host(s)
# -----------------------------------------------------
[automationcontroller]
{% for host in groups['controllers'] %}
{{ host }} ansible_host={{ hostvars[host].private_dns_name }}
{% endfor %}

[automationcontroller:vars]
peers=execution_nodes

# This section is for your AAP Execution host(s)
# -----------------------------------------------------
[execution_nodes]
{% for host in groups['executions'] %}
{{ host }} ansible_host={{ hostvars[host].private_dns_name }}
{% endfor %}

# This section is for your AAP Automation Hub host(s)
# -----------------------------------------------------
[automationhub]
{% for host in groups['hubs'] %}
{{ host }} ansible_host={{ hostvars[host].private_dns_name }}
{% endfor %}

# This section is for your AAP EDA Controller host(s)
# -----------------------------------------------------
[automationedacontroller]
{% for host in groups['edas'] %}
{{ host }} ansible_host={{ hostvars[host].private_dns_name }}
{% endfor %}

[database]
{% for host in groups['dbs'] %}
{{ host }} ansible_host={{ hostvars[host].private_dns_name }}
{% endfor %}

[redis]
{% for host in groups['gateways'] %}
{{ host }} ansible_host={{ hostvars[host].private_dns_name }}
{% endfor %}

[all:vars]

# Common variables
# https://docs.redhat.com/en/documentation/red_hat_ansible_automation_platform/2.6/html/rpm_installation/appendix-inventory-files-vars#ref-general-inventory-variables
# -----------------------------------------------------
ansible_become=true
redis_mode='standalone'
registry_username={{ reg_user }}
registry_password={{ reg_pass }}

# AAP Gateway
# https://docs.redhat.com/en/documentation/red_hat_ansible_automation_platform/2.6/html/rpm_installation/appendix-inventory-files-vars#ref-gateway-variables
# -----------------------------------------------------
automationgateway_admin_password={{ aap_password }}
{% for host in groups['dbs'] %}
automationgateway_pg_host={{ hostvars[host].private_dns_name }}
{% endfor %}
automationgateway_pg_database=gtw
automationgateway_pg_username=gtw
automationgateway_pg_password={{ aap_password }}

# AAP Controller
# https://docs.redhat.com/en/documentation/red_hat_ansible_automation_platform/2.6/html/rpm_installation/appendix-inventory-files-vars#ref-controller-variables
# -----------------------------------------------------
admin_password={{ aap_password }}
{% for host in groups['dbs'] %}
pg_host={{ hostvars[host].private_dns_name }}
{% endfor %}
pg_database=awx
pg_username=awx
pg_password={{ aap_password }}

# AAP Automation Hub
# https://docs.redhat.com/en/documentation/red_hat_ansible_automation_platform/2.6/html/rpm_installation/appendix-inventory-files-vars#ref-hub-variables
# -----------------------------------------------------
automationhub_admin_password={{ aap_password }}
{% for host in groups['dbs'] %}
automationhub_pg_host={{ hostvars[host].private_dns_name }}
{% endfor %}
automationhub_pg_database=hub
automationhub_pg_username=hub
automationhub_pg_password={{ aap_password }}

# AAP EDA Controller
# https://docs.redhat.com/en/documentation/red_hat_ansible_automation_platform/2.6/html/rpm_installation/appendix-inventory-files-vars#event-driven-ansible-controller
# -----------------------------------------------------
automationedacontroller_admin_password={{ aap_password }}
{% for host in groups['dbs'] %}
automationedacontroller_pg_host={{ hostvars[host].private_dns_name }}
{% endfor %}
automationedacontroller_pg_database=eda
automationedacontroller_pg_username=eda
automationedacontroller_pg_password={{ aap_password }}
